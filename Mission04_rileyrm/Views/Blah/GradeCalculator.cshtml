@model GradeCalculatorModel;

<h3>Enter Your Final Percentages Below (Whole Numbers)</h3>

<!--
This is the form where the user puts in their final grade percentage. These numbers are then taken to the JS
-->
<form method="post">
    <label>Assignments</label>
    <input id="assignmentsInput" asp-for="Assignments"/>
    <br />
    <label>Group Projects</label>
    <input id="groupInput" asp-for="GroupProjects"  />
    <br />
    <label>Quizzes</label>
    <input id="quizzesInput" asp-for="Quizzes" />
    <br />
    <label>Midterm Exam</label>
    <input id="midtermInput" asp-for="Midterm" />
    <br />
    <label>Final Exam</label>
    <input id="finalInput" asp-for="Final"  />
    <br />
    <label>Intex</label>
    <input id="intexInput" asp-for="Intex"  />
    <br />
    <br />
    <input id="btsnd" type="submit" value="Calculate Final Grade" onclick="CalculateFinalGrade()" />
</form>

<div asp-validation-summary="All"></div>

<!--
This is where the final grade letter and percentage is outputted
-->
<div class="finalText">Your Final Letter Grade</div>
<div id="letterOutput" class="letterOutput"></div>
<div class="finalText">Your Final Percentage</div>
<div id="percentageOutput" class="percetageOutput"></div>


